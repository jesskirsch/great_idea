<h1>Your Idea</h1>
<div class="show">
<p class="list">
  <strong>Title:</strong><br>
  <%= @idea.title %>
</p>

<p class="list">
  <strong>Idea:</strong><br>
  <%= @idea.text %>
</p>
</div>

<div class="show-links"><td><%= link_to 'Back', ideas_path %></td>
<td><%= link_to 'Edit', edit_idea_path(@idea) %></td>
<td><%= link_to 'Delete', idea_path(@idea),
    method: :delete,
    data: { confirm: 'Are you sure?' } %></td></div>
